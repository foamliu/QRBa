@model IEnumerable<QRBa.Domain.Comment>

@{
    ViewBag.Title = "留言";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<table class="table">

    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.InsertedDateTime
                </td>
                <td>
                    @item.Content
                </td>
            </tr>
        }
    }

</table>

@using (Html.BeginForm("AddComment", "Forum", FormMethod.Post))
{
    <div class="form-group">
        <textarea class="form-control" name="content" rows="4" placeholder="留言"></textarea>
    </div>

    <div class="form-group">
        <input type="submit" value="保存" class="btn btn-primary" />
    </div>
}
